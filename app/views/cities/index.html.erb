<div class="container">

<%= link_to 'Agregar', new_city_path, class: "pull-right btn btn-primary" %>

<h1>Listing Cities</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Country</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.country.name %></td>
        <td><%= city.name %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
