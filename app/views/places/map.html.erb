<div class="container">

  <h1>Listing Places</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th>City</th>
        <th>Name</th>
        <th>Slug</th>
        <th>Content</th>
        <th>Active</th>
      </tr>
    </thead>

    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.user.name %></td>
          <td><%= place.city.name %></td>
          <td><%= place.name %></td>
          <td><%= place.slug %></td>
          <td><%= simple_format(place.content) %></td>
          <td><%= place.active %></td>
          <td><%= link_to 'Show', place %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>