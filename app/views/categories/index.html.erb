<div class="container">

<%= link_to 'Agregar', new_category_path, class: "btn btn-success pull-right" %>
<h1>Listing Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.slug %></td>
        <td><%= link_to 'Show', category %></td>
        <td>
          <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_category_path(category), class: "btn btn-xs btn-warning" %>
          <%= link_to '<i class="fa fa-remove"></i>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
