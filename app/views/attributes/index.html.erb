<div class="container">
  <%= link_to 'AGREGAR', new_attribute_path, class: "btn btn-primary pull-right" %>

  <h1>Listing Attributes</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Place</th>
        <th>User</th>
        <th>Option</th>
        <th>Name</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @attributes.each do |attribute| %>
        <tr>
          <td><%= attribute.place.name %></td>
          <td><%= attribute.user %></td>
          <td><%= attribute.option %></td>
          <td><%= attribute.name %></td>
          <td><%= attribute.active %></td>
          <td><%= link_to 'Show', attribute %></td>
          <td><%= link_to 'Edit', edit_attribute_path(attribute) %></td>
          <td><%= link_to 'Destroy', attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
