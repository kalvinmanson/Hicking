<%= form_for(@attribute) do |f| %>
  <% if @attribute.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attribute.errors.count, "error") %> prohibited this attribute from being saved:</h2>

      <ul>
      <% @attribute.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :place_id %><br>
    <%= f.select(:place_id, Place.all.collect {|a| [a.name, a.id]}, {}, { class: 'form-control' }) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.select(:user_id, User.all.collect {|a| [a.name, a.id]}, {}, { class: 'form-control' }) %>
  </div>
  <div class="form-group">
    <%= f.label :option_id %><br>
    <%= f.select(:option_id, Option.all.collect {|a| [a.name, a.id]}, {}, { class: 'form-control' }) %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="checkbox">
      <%= f.label :active do %>
      <%= f.check_box :active %>  Activo
      <% end %>
    </div>
  </div>


  <div class="form-group">
    <%= f.submit 'Guardar', class: "btn btn-primary" %>
  </div>
<% end %>
